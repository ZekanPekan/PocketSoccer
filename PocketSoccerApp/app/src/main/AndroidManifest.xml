<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luka.pocketsoccerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.EndScreenActivity"></activity>
        <activity android:name=".Activities.SpeedSetterActivity" />
        <activity android:name=".Activities.MatchSetterActivity" />
        <activity android:name=".Activities.FieldSetterActivity" />
        <activity android:name=".Activities.SettingsActivity" />
        <activity android:name=".Activities.NewGameActivity" />
        <activity android:name=".Activities.GameActivity" />
        <activity android:name=".Activities.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>